<% include partials/header %>

<link rel="stylesheet" type="text/css" href="/stylesheets/registration.css">
<script type="text/javascript" src="/scripts/showPass.js"></script>

<div class="dashboard-header">
    <div class="container">
        <h5 class="user">User Management</h5>
    </div>
</div>
<div class="container img-thumbnail">
    <h6 class="text-center">User Registration</h6>
    <div class="container">
        <p class="enter">User Details</p>
        <hr>
        <form action="/register" method="POST">
            <div class="row">
                <div class="col-lg-6">
                    <p class="idk">Email</p>
                    <input class="adhar-input" type="email" name="email" placeholder="email">
                </div>
                <div class="col-lg-6">
                    <p class="idk">Username</p>
                    <input class="adhar-input" type="text" name="username" placeholder="username">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p class="idk">First Name</p>
                    <input class="adhar-input" type="text" name="firstName" placeholder="first name">
                </div>
                <div class="col-lg-6">
                    <p class="idk">Last Name</p>
                    <input class="adhar-input" type="text" name="lastName" placeholder="last name">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p class="idk">Avatar Url</p>
                    <input class="adhar-input" type="text" name="avatar" placeholder="avatar url">
                </div>
                <div class="col-lg-6">
                    <p class="idk">Mobile Number</p>
                    <input class="adhar-input" type="number" name="number" placeholder="number">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6">
                    <p class="idk">Age</p>
                    <input class="adhar-input" type="number" name="age" placeholder="age">
                </div>
                <div class="col-lg-6">
                    <p class="idk">Aadhar Number</p>
                    <input class="adhar-input" type="text" name="adhar" placeholder="Adhar Number">
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <p class="idk">Password</p>
                    <input class="adhar-input" type="password" name="password" id="myInput" placeholder="password">
                    <input type="checkbox" onclick="myFunction()">Show Password 
                </div>
            </div>
            <button class="btn btn-sm btn-block">Submit</button>
        </form>
    </div>

</div>

<% include partials/footer %>